{
    "name": "laravel-json-api/laravel",
    "description": "JSON API for Laravel applications.",
    "keywords": [
        "jsonapi.org",
        "json-api",
        "jsonapi",
        "json:api",
        "laravel"
    ],
    "homepage": "https://github.com/laravel-json-api/{NAME}",
    "support": {
        "issues": "https://github.com/laravel-json-api/{NAME}/issues"
    },
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Cloud Creativity Ltd",
            "email": "info@cloudcreativity.co.uk"
        },
        {
            "name": "Christopher Gammie",
            "email": "contact@gammie.co.uk"
        }
    ],
    "repositories": [
        {
            "type": "path",
            "url": "../eloquent"
        },
        {
            "type": "path",
            "url": "../spec"
        },
        {
            "type": "path",
            "url": "../validation"
        }
    ],
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "laravel-json-api/eloquent": "*",
        "laravel-json-api/spec": "*",
        "laravel-json-api/validation": "*",
        "laravel/framework": "^8.0",
        "neomerx/json-api": "^4.0"
    },
    "require-dev": {
        "cloudcreativity/json-api-testing": "^3.1",
        "orchestra/testbench": "^6.3",
        "phpunit/phpunit": "^9.4"
    },
    "autoload": {
        "psr-4": {
            "LaravelJsonApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\":  "tests/dummy/app",
            "App\\Tests\\": "tests/dummy/tests",
            "Database\\Factories\\": "tests/dummy/database/factories",
            "LaravelJsonApi\\Tests\\": "tests/lib"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev",
            "dev-develop": "1.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
